# server configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000
HOST=0.0.0.0

# security
SECRET_KEY=your-secret-key-change-in-production

# cors configuration
CORS_ORIGINS=http://localhost:5173

# application settings
MAX_CONTENT_LENGTH=52428800

# ai configuration
# openai direct api (optional - for using openai models directly)
OPENAI_API_KEY=your_openai_api_key_here

# openrouter (openai-compatible) for kimi and other models
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# optional but recommended by openrouter
OPENROUTER_SITE_URL=http://localhost:5173
OPENROUTER_APP_NAME=slAIde

# default model (text) - used when model selector is on kimi
AI_MODEL=moonshotai/kimi-k2.5
# optional: separate model for image analysis
AI_VISION_MODEL=openai/gpt-4o-mini
